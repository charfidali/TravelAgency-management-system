{% extends 'base.back.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
<section id="main-content" style="background-color:#EDFFCF;">
<section class="wrapper site-min-height">
<div style="text-align :center;">
<h3 style="color :black; font-family: Georgia, serif;" >Liste des Commentaires à Valider ou Supprimer</h3>
</div>
        <div class="row">
          <div class="col-lg-12">

{% for c in commentaires %}

            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
              <div class="custom-box">
                
                <ul class="pricing">
               <li>Contenu :  {{ c.text }}</li>
                <li>Utilisateur : {{ c.user}}</li>
                <li>hotel: {{ c.hotel }}</li>
                <li>status :  à valider par Admin </li>
                
                </ul>
                                <ul class="pricing">
                </ul>
                <a class="btn btn-theme" href="{{ path( 'validerComm' , {'id':c.id} )}}">Valider</a>
                <form method="post" action="{{ path( 'deleteComm' , {'id':c.id} )}}" style="display: inline-block;">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger">Supprimer</button>
                </form>
              </div>
              <!-- end custombox -->
            </div>
            {% endfor %}
            <!-- end col-4 -->
  
            <!-- end col-4 -->
          </div>
          <!--  /col-lg-12 -->
        </div>
