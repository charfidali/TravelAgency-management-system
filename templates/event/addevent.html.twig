
{% extends 'base.back.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
   <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Evenement</h3>
        <!-- BASIC FORM VALIDATION -->

        <!-- /row -->
        <div class="row mt">
          <div class="col-lg-12">
            <div class="form-panel">
              <div class="form">



                <form class="cmxform form-horizontal style-form" enctype="multipart/form-data"  method="post"  action="" >
                  <div class="form-group ">
                    <label for="firstname" class="control-label col-lg-2">Non</label>
                    <div class="col-lg-10">
  {{ form_widget (f.nom) }} 
                      </div>
                  </div>
                  <div class="form-group ">
                    <label for="lastname" class="control-label col-lg-2">Télécharger un image</label>
                    <div class="col-lg-10">
                      <div class="fileupload fileupload-new" data-provides="fileupload">
                        <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                          {% if ev is defined  %}
                          <img src="http://127.0.0.1/pictures/imagevent/{{ev.image}}" alt="" />
                          {% else  %}
                          <img src="" alt="" />
                          {% endif %}
                        </div>
                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                        <div>
                          <span class="btn btn-theme02 btn-file">
                            <span class="fileupload-new"><i class="fa fa-paperclip"></i> Select image</span>
                          <span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
                         {{ form_widget (f.imageFile) }} 
                          </span>

                        </div>
                      </div>
                      <span class="label label-info">NOTE!</span>
                      <span>
                        Attached image thumbnail is
                        supported in Latest Firefox, Chrome, Opera,
                        Safari and Internet Explorer 10 only
                        </span>





                    </div>
                    </div>

                  <div class="form-group ">
                    <label for="username" class="control-label col-lg-2">Date</label>
                    <div class="col-lg-10">
  {{ form_widget (f.dateEvent) }} 

                          </div>
                    </div>




                  <div class="form-group ">
                    <label for="password" class="control-label col-lg-2">capacite</label>
                    <div class="col-lg-10">
                     {{ form_widget (f.capacite) }} 
                    </div>
                  </div>


                  <div class="form-group ">
                    <label for="confirm_password" class="control-label col-lg-2">typeEvent</label>
                    <div class="col-lg-10">
                        {{ form_widget (f.typeEvent) }} 
                    </div>
                  </div>


                  <div class="form-group ">
                    <label for="email" class="control-label col-lg-2">Prix</label>
                    <div class="col-lg-10">
                       {{ form_widget (f.prix) }} 
                    </div>
                  </div>


                  <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
              <button class="btn btn-theme" name="submit"  type="submit">Submit</button>
               <a class="btn btn-theme" href="{{ path( 'lista') }}">Anuller</a>
                     
                    </div>
                  </div>
                </form>

              </div>
            </div>
            <!-- /form-panel -->
          </div>
          <!-- /col-lg-12 -->
        </div>

        <!-- /form-panel -->
          </div>
          <!-- /col-lg-12 -->
        </div>
        <!-- /row -->
      </section>
      <!-- /wrapper -->
    </section>
{% endblock %}
 {% block javascripts_this_page %} 
  <!--script for this page-->
<script src="{{ asset('back/lib/form-validation-script.js' ) }}"></script>
  <script src="{{ asset('back/lib/jquery-ui-1.9.2.custom.min.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-fileupload/bootstrap-fileupload.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-datepicker/js/bootstrap-datepicker.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-daterangepicker/date.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-daterangepicker/daterangepicker.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-daterangepicker/moment.min.js' ) }}"></script>
  <script type="text/javascript" src="{{ asset('back/lib/bootstrap-timepicker/js/bootstrap-timepicker.js' ) }}"></script>
  <script src="{{ asset('back/lib/advanced-form-components.js' ) }}">
  
  {% endblock %}